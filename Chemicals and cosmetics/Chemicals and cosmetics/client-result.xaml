<Window x:Class="Chemicals_and_cosmetics.client_result"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Chemicals_and_cosmetics"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="client_result">

    <Grid>
        <Button x:Name="done" Content="Done" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10,10,10,10" Width="100" Height="50" Click="doneBtn_Click"/>
        <DataGrid x:Name="showResult" ItemsSource="{Binding DataView}" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center"   
            Height="180" Width="500" AutoGenerateColumns="True"/>
        <Label Content="matching products were found" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="30" HorizontalContentAlignment="Center" Margin="186,10,9.6,0"/>
        <Label x:Name="count_products" Content="" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="30" HorizontalContentAlignment="Center" Margin="0,10,565.6,0"/>
    </Grid>

</Window>
