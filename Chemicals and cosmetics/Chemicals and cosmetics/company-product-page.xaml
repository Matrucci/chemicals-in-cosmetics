<Page x:Class="Chemicals_and_cosmetics.company_product_page"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Chemicals_and_cosmetics"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="company_product_page">

    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,20,0,20"/>
        <Label Content="Changed the product Name?" HorizontalAlignment="Center" Height="68" VerticalAlignment="Top" Width="800" FontFamily="Arial Black" FontSize="50" HorizontalContentAlignment="Center"/>
        <TextBlock x:Name="greetingOutput"/>
        <Label Content="Product Code" FontFamily="Arial Black" Margin="192,0,336,0" FontSize="18"/>
        <TextBox Height="22" TextWrapping="Wrap" Text="Type here ..." Margin="192,0,336,0" FontSize="14"/>
        <Label Content="New Name" FontFamily="Arial Black" Margin="192,50,336,0" FontSize="18"/>
        <TextBox Height="23" TextWrapping="Wrap" Text="Type here ..." Margin="192,0,336,0" FontSize="14"/>
        <Button Content="UPDATE" Margin="0,100,50,0" HorizontalAlignment="Right" Height="42" VerticalAlignment="Top" Width="107"/>

    </StackPanel>
</Page>
